<h1>New Story</h1>
<%= form_with model: @story do |form| %>
  <% if form.object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form.object.errors.count, "error") %> prohibited this story from being saved:</h2>
      <ul>
        <% form.object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :mythology_id %>
    <%= form.select :mythology_id, [1, 2, 3, 4] %>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.text_area :body, placeholder: 'AI will generate this', style: 'display:none' %>
  </div>
  <%= form.button class: 'border font-bold py-2 px-4 rounded' %>
<% end %>
